{
  "name": "spiders",
  "version": "1.0.0",
  "description": "A web engineering log.",
  "main": "src/index.js",
  "scripts": {
    "deploy": "npm ci && npm run u:build && npm run s:build && NODE_ENV=production pm2 restart server/index.js --name spiders",
    "u:build": "NODE_ENV=production webpack --config webpack.ui.config.js",
    "s:build": "NODE_ENV=production webpack --config webpack.server.config.js ",
    "u:dev": "NODE_ENV=development webpack-dev-server --config webpack.ui.config.js",
    "s:dev": "NODE_ENV=development tsnd --tree-kill --exit-child --project tsconfig.server.json server/index.ts",
    "db:migrate": "node-pg-migrate -m server/src/db/migrations",
    "lint": "eslint --fix --ext .js,.jsx ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidiousvic/spiders.git"
  },
  "author": "sidiousvic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sidiousvic/spiders/issues"
  },
  "homepage": "https://github.com/sidiousvic/spiders#readme",
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@babel/preset-react": "^7.10.4",
    "@types/react-router-dom": "^5.1.5",
    "apollo-server": "^2.18.1",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "cookie-universal": "^2.1.4",
    "cross-fetch": "^3.0.6",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "highlight.js": "^10.2.1",
    "jsonwebtoken": "^8.5.1",
    "lit-element": "^2.4.0",
    "node-pg-migrate": "^5.8.0",
    "pg": "^8.3.3",
    "prismjs": "^1.22.0",
    "react-router-dom": "^5.2.0",
    "use-sound": "^1.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "isomorphic-style-loader": "^5.1.0",
    "mini-css-extract-plugin": "^1.0.0",
    "prism-loader": "^0.2.0",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.0.4",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  }
}
