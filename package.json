{
  "name": "spiders",
  "version": "1.0.0",
  "description": "A web engineering log.",
  "main": "src/index.js",
  "scripts": {
    "deploy": "npm ci && npm run build && pm2 restart pm2.config.js",
    "start": "pm2 start pm2.config.js",
    "build": "npm run ui/build && npm run server/build",
    "ui/build": "NODE_ENV=production webpack --config ui/webpack.ui.config.js",
    "ui/dev": "NODE_ENV=development webpack-dev-server --config ui/webpack.ui.config.js",
    "server/build": "NODE_ENV=production webpack --config server/webpack.server.config.js",
    "server/dev": "NODE_ENV=development tsnd -r tsconfig-paths/register -r dotenv/config --project server/tsconfig.server.json --tree-kill --exit-child server/index.ts",
    "db/migrate": "node-pg-migrate -m server/db/migrations"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidiousvic/spiders.git"
  },
  "author": "sidiousvic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sidiousvic/spiders/issues"
  },
  "homepage": "https://github.com/sidiousvic/spiders#readme",
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "apollo-server": "^2.18.1",
    "await-spawn": "^4.0.1",
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "markdown-it": "^12.0.2",
    "node-pg-migrate": "^5.8.0",
    "pg": "^8.3.3",
    "prettier": "^2.1.2",
    "showdown": "^1.9.1",
    "terser-webpack-plugin": "^4.2.3",
    "three": "^0.123.0",
    "uuidv4": "^6.2.5",
    "xstate": "^4.14.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-loader": "^8.1.0",
    "babel-preset-airbnb": "^5.0.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.1",
    "pm2": "^4.5.0",
    "prism-loader": "^0.2.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths-webpack-plugin": "3.0.0",
    "typescript": "^4.0.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-font-preload-plugin": "^1.0.1",
    "webpack-node-externals": "^2.5.2"
  },
