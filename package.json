{
  "name": "spiders",
  "version": "1.0.0",
  "description": "A web engineering log.",
  "main": "src/index.js",
  "scripts": {
    "deploy": "npm ci && npm run build && pm2 restart pm2.config.js",
    "start": "pm2 start pm2.config.js",
    "build": "npm run ui/build && npm run server/build",
    "ui/build": "NODE_ENV=production webpack --config ui/webpack.ui.config.js",
    "ui/dev": "NODE_ENV=development webpack-dev-server --config ui/webpack.ui.config.js",
    "server/build": "NODE_ENV=production tsc --project server/tsconfig.json",
    "server/dev": "NODE_ENV=development tsnd -r tsconfig-paths/register -r dotenv/config --project server/tsconfig.json --tree-kill --exit-child server/launch.ts",
    "db/migrate": "node-pg-migrate -m server/db/migrations"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidiousvic/spiders.git"
  },
  "author": "sidiousvic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sidiousvic/spiders/issues"
  },
  "homepage": "https://github.com/sidiousvic/spiders#readme",
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.12.1",
    "apollo-server": "^2.18.1",
    "await-spawn": "^4.0.1",
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "lit-element": "^2.4.0",
    "node-pg-migrate": "^5.8.0",
    "pg": "^8.3.3",
    "pino": "^6.7.0",
    "pino-http": "^5.3.0",
    "prettier": "^2.1.2",
    "prismjs": "^1.22.0",
    "showdown": "^1.9.1",
    "xstate": "^4.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.0.0",
    "pm2": "^4.5.0",
    "prism-loader": "^0.2.0",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths-webpack-plugin": "3.0.0",
    "typescript": "^4.0.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
